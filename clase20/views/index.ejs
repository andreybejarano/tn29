<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('partials/headerNavbar') %>

    <!-- Header -->
    <%- include('partials/headerMain') %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/principal.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Sabores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%= about.titulo %></h1>
          <br />
          <p class="ps-large">
            <%= about.descripcion %>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.historia %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <% menu.forEach(plato => { %>
            <h4><a href="/detalle/<%= plato.id %>"><%= plato.titulo %></a></h4>
          <p class="ps-text-grey">
            <%= plato.descripcionCorta %> U$S <%= plato.precio %>
          </p>
          <br />
           <%   }) %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
